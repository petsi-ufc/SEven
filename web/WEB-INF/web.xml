<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
 http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
   
    <servlet>
        <servlet-name>ServletCentral</servlet-name>
        <servlet-class>br.ufc.pet.servlets.ServletCentral</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCentral</servlet-name>
        <url-pattern>/ServletCentral</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
   <resource-ref>
        <description>Resource reference to a factory for javax.mail.Session
        instances that may be used for sending electronic mail
        messages, preconfigured to connect to the appropriate
        SMTP server.
        </description>
        <res-ref-name>mail/Session</res-ref-name>
        <res-type>javax.mail.Session</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
     <!--<resource-ref>
        <res-ref-name>jdbc/bd_seven</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
       <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>-->
    <jsp-config>

        <jsp-property-group>

            <url-pattern>*.jsp</url-pattern>

            <page-encoding>UTF-8</page-encoding>

        </jsp-property-group>

    </jsp-config>

</web-app>
